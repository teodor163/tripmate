@page
@model TripMate_TeodorLazar.Pages.Groups.VoteModel
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/Destinations/Search">TripMate</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto">
                <li class="nav-item"><a class="nav-link" href="/Destinations/Search">Search</a></li>
                <li class="nav-item"><a class="nav-link" href="/Stops/Stops">Stops</a></li>
                <li class="nav-item"><a class="nav-link" href="/Friends/Manage">Friends</a></li>
                <li class="nav-item"><a class="nav-link active" href="/Groups/MyGroups">Groups</a></li>
            </ul>
        </div>
    </div>
</nav>

<div class="container mt-4">
    <h2>Vote</h2>

    @if (!Model.IsLoggedIn)
    {
        <div class="alert alert-warning">Login required. <a href="/Auth/Login">Login</a></div>
        return;
    }

    @if (!string.IsNullOrEmpty(Model.Error))
    {
        <div class="alert alert-danger">@Model.Error</div>
    }
    @if (!string.IsNullOrEmpty(Model.Success))
    {
        <div class="alert alert-success">@Model.Success</div>
    }

    <div class="card p-3 mb-3">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <strong>Group:</strong> @Model.GroupName
                <div class="text-muted small">Pick one stop. You can change vote anytime.</div>
            </div>
            <a class="btn btn-sm btn-outline-primary" href="/Groups/Plan?groupId=@Model.GroupId">Back to plan</a>
        </div>
    </div>

    <div class="card p-3 mb-3">
        <h5>Stops</h5>

        @if (Model.Stops.Count == 0)
        {
            <div class="text-muted">No stops to vote for. Add stops in Plan page.</div>
        }
        else
        {
            <ul class="list-group">
                @foreach (var s in Model.Stops)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>@s</strong>
                            <span class="badge bg-secondary ms-2">@Model.Counts.GetValueOrDefault(s, 0) votes</span>
                        </div>

                        <form method="post" class="d-flex">
                            <input type="hidden" name="groupId" value="@Model.GroupId" />
                            <input type="hidden" name="stopName" value="@s" />
                            <button class="btn btn-sm btn-success">Vote</button>
                        </form>
                    </li>
                }
            </ul>
        }
    </div>

    <div class="card p-3">
        <h5>Result</h5>
        @if (Model.TopVotes == 0)
        {
            <div class="text-muted">No votes yet</div>
        }
        else if (Model.HasTie)
        {
            <div class="alert alert-warning mb-0">
                Tie with @Model.TopVotes votes: <strong>@string.Join(", ", Model.Winners)</strong>
            </div>
        }
        else
        {
            <div class="alert alert-success mb-0">
                Winner: <strong>@Model.Winners.FirstOrDefault()</strong> (@Model.TopVotes votes)
            </div>
        }
    </div>
</div>
