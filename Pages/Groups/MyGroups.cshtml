@page
@model TripMate_TeodorLazar.Pages.Groups.MyGroupsModel
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/Destinations/Search">TripMate</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto">
                <li class="nav-item"><a class="nav-link" href="/Destinations/Search">Search</a></li>
                <li class="nav-item"><a class="nav-link" href="/Stops/Stops">Stops</a></li>
                <li class="nav-item"><a class="nav-link" href="/Friends/Manage">Friends</a></li>
                <li class="nav-item"><a class="nav-link active" href="/Groups/MyGroups">Groups</a></li>
            </ul>
        </div>
    </div>
</nav>

<div class="container mt-4">
    <h2>My groups</h2>

    @if (!Model.IsLoggedIn)
    {
        <div class="alert alert-warning">Login required. <a href="/Auth/Login">Login</a></div>
        return;
    }

    <div class="card p-3">
        <ul class="list-group">
            @foreach (var g in Model.Groups)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <strong>@g.Name</strong>
                        <div class="text-muted small">Members: @g.Members.Count</div>
                    </div>

                    <div class="btn-group">
                        <a class="btn btn-sm btn-outline-primary" href="/Groups/Plan?groupId=@g.Id">Plan</a>
                        <a class="btn btn-sm btn-outline-success" href="/Groups/Vote?groupId=@g.Id">Vote</a>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>
