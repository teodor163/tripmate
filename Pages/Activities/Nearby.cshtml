@page
@model TripMate_TeodorLazar.Pages.Activities.NearbyModel

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">

        <!-- APP NAME -->
        <a class="navbar-brand" href="/">TripMate</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarNav" aria-controls="navbarNav"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- NAV LINKS -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">

                <li class="nav-item">
                    <a class="nav-link" href="/Destinations/Search">Search</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/Stops/Stops">Stops</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/Lodging/Lodging">Lodging</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/Weather/Check">Weather</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/Activities/Nearby">Activities</a>
                </li>

            </ul>
        </div>

    </div>
</nav>

<div class="container mt-4">


    <div class="container mt-4">
        <h2>Nearby activities</h2>

        <div class="card p-3 mb-4">
            <form method="get" class="row g-2">
                <div class="col-md-9">
                    <input class="form-control"
                           name="destination"
                           placeholder="Enter destination (e.g. Bled, Vienna)..."
                           value="@Model.DestinationQuery" />
                </div>

                <div class="col-md-3">
                    <button class="btn btn-primary w-100">Show activities</button>
                </div>
            </form>
        </div>

        @if (Model.DestinationQuery != null)
    {
        @if (Model.Results.Any())
        {
        <ul class="list-group">
            @foreach (var item in Model.Results)
                {
            <li class="list-group-item d-flex justify-content-between">
                <span>@item.Name</span>
                <span class="text-muted">@item.DistanceKm km</span>
            </li>
                }
        </ul>
        }
        else
        {
        <p class="text-danger">No activities found near this destination.</p>
        }
    }
    </div>
</div>
