@page
@model TripMate_TeodorLazar.Pages.Share.ViewModel
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container mt-4">
    <h2>Shared plan view (public)</h2>

    @if (!string.IsNullOrEmpty(Model.Error))
    {
        <div class="alert alert-danger">@Model.Error</div>
        return;
    }

    <div class="card p-3 mb-3">
        <div><strong>Group:</strong> @Model.GroupName</div>
        <div class="text-muted small">
            Version: @Model.Plan.Version | UpdatedBy: @Model.Plan.UpdatedByEmail | @Model.Plan.UpdatedAtUtc.ToString("u")
        </div>
    </div>

    <div class="card p-3">
        <h5>Stops</h5>
        @if (Model.Plan.Stops.Count == 0)
        {
            <div class="text-muted">No stops</div>
        }
        else
        {
            <ul class="list-group">
                @for (int i = 0; i < Model.Plan.Stops.Count; i++)
                {
                    <li class="list-group-item">@((i + 1) + ". " + Model.Plan.Stops[i])</li>
                }
            </ul>
        }
    </div>

    <div class="text-muted small mt-3">
        This page works without login. If link is disabled or expired, it will show error.
    </div>
</div>
