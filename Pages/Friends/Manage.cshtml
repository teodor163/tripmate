@page
@model TripMate_TeodorLazar.Pages.Friends.ManageModel
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/Destinations/Search">TripMate</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto">
                <li class="nav-item"><a class="nav-link" href="/Destinations/Search">Search</a></li>
                <li class="nav-item"><a class="nav-link" href="/Stops/Stops">Stops</a></li>
                <li class="nav-item"><a class="nav-link active" href="/Friends/Manage">Friends</a></li>
                <li class="nav-item"><a class="nav-link" href="/Groups/MyGroups">Groups</a></li>
            </ul>
        </div>
    </div>
</nav>

<div class="container mt-4">
    <h2>Friends / Invites</h2>

    @if (!Model.IsLoggedIn)
    {
        <div class="alert alert-warning">Login required. Go to <a href="/Auth/Login">Login</a></div>
        return;
    }

    @if (!string.IsNullOrEmpty(Model.Error))
    {
        <div class="alert alert-danger">@Model.Error</div>
    }
    @if (!string.IsNullOrEmpty(Model.Success))
    {
        <div class="alert alert-success">@Model.Success</div>
    }

    <div class="card p-3 mb-4">
        <h5>Send invite to your group</h5>
        <form method="post">
            <div class="row g-2">
                <div class="col-md-5">
                    <input class="form-control" name="toEmail" placeholder="friend@email.com" />
                </div>
                <div class="col-md-5">
                    <select class="form-select" name="groupId">
                        @foreach (var g in Model.MyGroups)
                        {
                            <option value="@g.Id">@g.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary w-100" type="submit">Invite</button>
                </div>
            </div>
        </form>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card p-3">
                <h5>Incoming invites</h5>
                @if (Model.Incoming.Count == 0)
                {
                    <div class="text-muted">No invites</div>
                }
                else
                {
                    <ul class="list-group">
                        @foreach (var inv in Model.Incoming)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <div><strong>@inv.FromEmail</strong> invited you</div>
                                    <div class="text-muted small">GroupId: @inv.GroupId | Status: @inv.Status</div>
                                </div>

                                @if (inv.Status.ToString() == "Pending")
                                {
                                    <div class="btn-group">
                                        <a class="btn btn-sm btn-success" href="?accept=@inv.Id">Accept</a>
                                        <a class="btn btn-sm btn-danger" href="?reject=@inv.Id">Reject</a>
                                    </div>
                                }
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>

        <div class="col-md-6">
            <div class="card p-3">
                <h5>Outgoing invites</h5>
                @if (Model.Outgoing.Count == 0)
                {
                    <div class="text-muted">No outgoing invites</div>
                }
                else
                {
                    <ul class="list-group">
                        @foreach (var inv in Model.Outgoing)
                        {
                            <li class="list-group-item">
                                <div><strong>@inv.ToEmail</strong> (GroupId: @inv.GroupId)</div>
                                <div class="text-muted small">Status: @inv.Status</div>
                            </li>
                        }
                    </ul>
                }
            </div>
        </div>
    </div>
</div>
