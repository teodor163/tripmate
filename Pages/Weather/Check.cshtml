@page
@model TripMate_TeodorLazar.Pages.Weather.CheckModel

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">

        <!-- APP NAME -->
        <a class="navbar-brand" href="/">TripMate</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarNav" aria-controls="navbarNav"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- NAV LINKS -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">

                <li class="nav-item">
                    <a class="nav-link" href="/Destinations/Search">Search</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/Stops/Stops">Stops</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/Lodging/Lodging">Lodging</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/Weather/Check">Weather</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/Activities/Nearby">Activities</a>
                </li>

            </ul>
        </div>

    </div>
</nav>



    <div class="container mt-4">

        <h2>Weather information</h2>

        <div class="card p-3 mb-4">
            <form method="get" class="row g-2">

                <div class="col-md-7">
                    <input name="destination"
                           class="form-control"
                           placeholder="Enter destination (e.g. Bled, Paris)..."
                           value="@Model.InputDestination" />
                </div>

                <div class="col-md-3">
                    <input name="condition"
                           class="form-control"
                           placeholder="Optional: manual weather (sunny, cloudy,..." />
                </div>

                <div class="col-md-2">
                    <button class="btn btn-primary w-100">Show weather</button>
                </div>
            </form>
        </div>

        @if (Model.CurrentWeather != null)
    {
        <div class="card p-3">
            <h4>@Model.CurrentWeather.Destination</h4>
            <p>Condition: <strong>@Model.CurrentWeather.Condition</strong></p>
            <p>Temperature: <strong>@Model.CurrentWeather.Temperature C</strong></p>
        </div>
    }

    </div>
