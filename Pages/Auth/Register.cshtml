@page
@model TripMate_TeodorLazar.Pages.Auth.RegisterModel
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">TripMate</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto">
                <li class="nav-item"><a class="nav-link" href="/Destinations/Search">Search</a></li>
                <li class="nav-item"><a class="nav-link" href="/Stops/Stops">Stops</a></li>
                <li class="nav-item"><a class="nav-link" href="/Auth/Login">Login</a></li>
                <li class="nav-item"><a class="nav-link active" href="/Auth/Register">Register</a></li>
                <li class="nav-item"><a class="nav-link" href="/Profile/Edit">Profile</a></li>
            </ul>
        </div>
    </div>
</nav>

<div class="container mt-4">
    <h2>Register</h2>

    @if (!string.IsNullOrEmpty(Model.Error))
    {
        <div class="alert alert-danger">@Model.Error</div>
    }

    @if (Model.Success)
    {
        <div class="alert alert-success">Account created. You can login now.</div>
    }

    <form method="post" class="card p-3">
        <div class="mb-2">
            <label>Email</label>
            <input class="form-control" asp-for="Email" />
        </div>

        <div class="mb-2">
            <label>Password</label>
            <input class="form-control" asp-for="Password" type="password" />
        </div>

        <div class="mb-2">
            <label>Name</label>
            <input class="form-control" asp-for="Name" />
        </div>

        <button class="btn btn-primary">Create account</button>
    </form>
</div>
