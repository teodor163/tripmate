@page
@model TripMate_TeodorLazar.Pages.Destinations.SearchModel

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">

        <!-- APP NAME -->
        <a class="navbar-brand" href="/">TripMate</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarNav" aria-controls="navbarNav"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- NAV LINKS -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">

                <li class="nav-item">
                    <a class="nav-link" href="/Destinations/Search">Search</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/Stops/Stops">Stops</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/Lodging/Lodging">Lodging</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/Weather/Check">Weather</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/Activities/Nearby">Activities</a>
                </li>

            </ul>
        </div>

    </div>
</nav>



<div class="container mt-4">

    <h2 class="mb-3">Destination search</h2>

    <div class="card p-4 mb-4">
        <form method="get">
            
            <!-- SEARCH BAR -->
            <div class="input-group mb-3">
                <input class="form-control"
                       type="text"
                       name="query"
                       placeholder="Enter destination name..."
                       value="@Model.Query" />

                <button class="btn btn-primary" type="submit">Search</button>
            </div>

            <!-- FILTER CHECKBOXES -->
            <div class="row mb-2">
                <div class="col-md-3">
                    <label class="form-check-label">
                        <input class="form-check-input"
                               type="checkbox"
                               name="categories"
                               value="nature"
                               @(Model.SelectedCategories.Contains("nature") ? "checked" : "") />
                        Nature
                    </label>
                </div>

                <div class="col-md-3">
                    <label class="form-check-label">
                        <input class="form-check-input"
                               type="checkbox"
                               name="categories"
                               value="culture"
                               @(Model.SelectedCategories.Contains("culture") ? "checked" : "") />
                        Culture
                    </label>
                </div>

                <div class="col-md-3">
                    <label class="form-check-label">
                        <input class="form-check-input"
                               type="checkbox"
                               name="categories"
                               value="sports"
                               @(Model.SelectedCategories.Contains("sports") ? "checked" : "") />
                        Sports
                    </label>
                </div>

                <div class="col-md-3">
                    <label class="form-check-label">
                        <input class="form-check-input"
                               type="checkbox"
                               name="categories"
                               value="food"
                               @(Model.SelectedCategories.Contains("food") ? "checked" : "") />
                        Food
                    </label>
                </div>
            </div>

            <button class="btn btn-outline-secondary mt-2" type="submit">Apply filters</button>

        </form>
    </div>

    <!-- RESULTS LIST -->
    @if (Model.Results.Any())
    {
    <div class="card p-3">
        <h4>Results:</h4>

        <ul class="list-group mt-2">
            @foreach (var item in Model.Results)
                {
            <li class="list-group-item">

                <div class="d-flex justify-content-between align-items-center">

                    <!-- DESTINATION NAME + CATEGORY -->
                    <div>
                        <strong>@item.Name</strong>
                        <span class="text-muted">(@item.Country)</span>
                        <span class="badge bg-secondary ms-2">@item.Category</span>
                    </div>

                    <!-- ACTION BUTTONS -->
                    <div class="btn-group">

                        <a class="btn btn-sm btn-outline-primary"
                           href="/Weather/Check?destination=@item.Name">
                            Weather
                        </a>

                        <a class="btn btn-sm btn-outline-success"
                           href="/Lodging/Lodging?destination=@item.Name">
                            Lodging
                        </a>

                        <a class="btn btn-sm btn-outline-warning"
                           href="/Activities/Nearby?destination=@item.Name">
                            Activities
                        </a>

                    </div>

                </div>

            </li>
                }
        </ul>
    </div>
    }
    else if (!string.IsNullOrEmpty(Model.Query) || Model.SelectedCategories.Any())
    {
    <p class="text-muted">No results for selected filters.</p>
    }

</div>
